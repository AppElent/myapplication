{
  "name": "administratie-app-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel src -d dist --extensions .ts,.js",
    "build:client": "cd client && react-scripts build",
    "start": "nodemon --exec babel-node ./src/server",
    "start:trace": "nodemon --trace-warnings --exec babel-node ./src/server",
    "start:client": "cd client && react-scripts start",
    "start:test": "cross-env NODE_ENV=TEST nodemon --exec babel-node ./src/server",
    "start:production": "cross-env NODE_ENV=PRODUCTION nodemon --exec babel-node ./src/server",
    "serve:dev": "cross-env NODE_ENV=PRODUCTION node ./dist/server",
    "serve:prod": "cross-env NODE_ENV=PRODUCTION node ./dist/server",
    "install:backend": "npm install --ignore-scripts",
    "install:frontend": "npm install --prefix ./client",
    "postinstall": "npm install --prefix ./client",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".js,.jsx,.ts,.tsx\" --source-maps inline",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint --ext=jsx,ts,tsx,js src",
    "lint:fix": "eslint --ext=jsx,ts,tsx,js src --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "src/app/bunq/*",
      "*.sqlite"
    ],
    "watch": [
      "src"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@bunq-community/bunq-js-client": "^0.42.1",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "enelogic": "^0.1.4",
    "epilogue": "^0.7.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "firebase-admin": "^8.8.0",
    "http-errors": "^1.7.3",
    "json-store": "^1.0.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "morgan": "~1.9.0",
    "node-cache": "^5.0.2",
    "node-fetch": "^2.6.0",
    "node-forge": "^0.9.1",
    "node-sass": "^4.13.0",
    "pg": "^7.14.0",
    "pug": "^2.0.4",
    "react-scripts": "^3.3.0",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "simple-cache-js": "0.0.1",
    "simple-encrypt-js": "^0.1.1",
    "simple-oauth2": "^3.1.0",
    "solaredge": "^0.0.1",
    "sqlite3": "^4.1.0",
    "start": "^5.1.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.21",
    "@types/node-fetch": "^2.5.4",
    "@types/sequelize": "^4.28.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  }
}
