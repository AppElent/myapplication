{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel src -d dist --extensions .ts,.js",
    "build:client": "cd client && react-scripts build",
    "start": "nodemon --exec babel-node ./src/server",
    "start:trace": "nodemon --trace-warnings --exec babel-node ./src/server",
    "start:client": "cd client && react-scripts start",
    "start:production": "cross-env NODE_ENV=PRODUCTION nodemon --exec babel-node ./src/server",
    "serve:dev": "cross-env NODE_ENV=PRODUCTION node ./dist/server",
    "serve:prod": "cross-env NODE_ENV=PRODUCTION node ./dist/server",
    "postinstall": "npm install --prefix ./client",
    "check-types": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "src/app/bunq/*",
      "*.sqlite"
    ],
    "watch": [
      "src"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@bunq-community/bunq-js-client": "^0.42.1",
    "@okta/jwt-verifier": "^1.0.0",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "epilogue": "^0.7.1",
    "express": "^4.17.1",
    "firebase-admin": "^8.3.0",
    "http-errors": "^1.7.3",
    "http-proxy": "^1.17.0",
    "json-store": "^1.0.0",
    "lodash": "^4.17.14",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "morgan": "~1.9.0",
    "node-cache": "^4.2.0",
    "node-fetch": "^2.6.0",
    "node-forge": "^0.8.5",
    "node-sass": "^4.12.0",
    "pg": "^7.11.0",
    "pug": "^2.0.4",
    "react-scripts": "^3.0.1",
    "sequelize": "^5.10.0",
    "sequelize-cli": "^5.5.0",
    "simple-oauth2": "^2.2.1",
    "sqlite3": "^4.0.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/sequelize": "^4.28.3",
    "cross-env": "^5.2.0",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.3"
  }
}
